{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["@vue/test-utils", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@monorepo/olive/*": ["packages/olive/src/*"],
      "@monorepo/wallet/*": ["packages/wallet/src/*"],
      "@monorepo/cedar/*": ["packages/cedar/src/*"],
      "@monorepo/rosewood/*": ["packages/rosewood/src/*"]
    }
  },
  "include": [],
  "references": [
    { "path": "./packages/cedar" },
    { "path": "./packages/olive" },
    { "path": "./packages/rosewood" },
    { "path": "./packages/wallet" }
  ]
}
